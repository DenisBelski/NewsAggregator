@model UserDataModel?

@{
    Layout = null;
}

@*<link href="css/style_positioning.css" type="text/css" rel="stylesheet">
*@

@if (Model == null)
{
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Login
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" asp-action="Login" asp-controller="Account">Login</a></li>
            <li><a class="dropdown-item" asp-action="Register" asp-controller="Account">Register</a></li>
        </ul>
    </div>
}
else
{
    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            @Model.Email
        </button>
        <ul class="dropdown-menu" style="font-size:small">
            <li>Role: @Model.RoleName</li>
            <li><hr class="dropdown-divider"></li>
            <li>ID: @Model.Id</li>
            <li><hr class="dropdown-divider"></li>
            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a></li>
        </ul>
    </div>
}
