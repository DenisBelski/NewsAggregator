@model ArticleWithUserRoleModel

@{
    ViewData["Title"] = "Article details";
}

<body class="details">
    <div>
        <h3 style="font-family:Calibri">
            @Model.Title
        </h3>
        <div>
            <p class="lh-lg fw-light" align="justify" style="font-family:Calibri">
                @Model.ArticleText
            </p>
        </div>
        <h6>
            @Model.PublicationDate
        </h6>
    </div>
    <hr />

    @if (Model.IsAdmin)
    {
        <a class="btn btn-outline-success" style="border:double" asp-controller="Article" asp-action="Edit" asp-route-id="@Model.Id">Edit article</a>
    }
    <a class="btn btn-outline-secondary" style="border:double" asp-controller="Article" asp-action="Index">Back</a>
</body>


@section CssStyles
    {
    <style>
        body.details {
            background-image: url(../css/images/article-back.png);
            background-repeat: repeat;
        }
    </style>
}