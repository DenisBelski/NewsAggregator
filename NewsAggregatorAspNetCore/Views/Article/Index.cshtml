@model IEnumerable<ArticleDto>

@{
    ViewData["Title"] = "View";
}

<h1>Articles</h1>


@foreach (var item in Model)
{
    <div class="accordion">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                    <strong style="color:lightslategrey">@Html.DisplayFor(modelItem => item.Title)</strong>
                </button>
            </h2>
            <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
                <div>
                    <code style="color:crimson">Категория: @Html.DisplayFor( modelItem => item.Category)</code>
                    <br>@Html.DisplayFor(modelItem => item.ShortDescription)
                    <br><p style="color:rgba(0,0,0,0.5)">@Html.DisplayFor(modelItem => item.PublicationDate)</p>
                    <a class="btn btn-success" style="background-color:cadetblue"  href="~/article/details/@item.Id">Read details</a>
                    <hr />
                </div>
            </div>
        </div>
    </div>


